  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug with pnpm",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["start:dev"],
      "port": 8080, // Default debugging port for Node.js
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}
